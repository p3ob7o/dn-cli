#!/usr/bin/env php
<?php

declare(strict_types=1);

// Find autoloader â€” works for both local dev and global composer install
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
];

foreach ($autoloadPaths as $path) {
    if (file_exists($path)) {
        require $path;
        break;
    }
}

$app = new DnCli\Application();
$app->run();
